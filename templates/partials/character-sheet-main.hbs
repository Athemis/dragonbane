<div class="tab main" data-group="primary" data-tab="main">
    <div class="main-tab flexcol">
        {{!-- Kin & Profession --}}
        <div class="flexrow">
            <table class="derived-stat">
                <tr>
                    <th>{{localize "DoD.ui.character-sheet.kin"}}</th>
                    <td>
                        <a class="sheet-table-data item-edit" data-item-id="{{kin.id}}">{{kin.name}}</a>
                    </td>
                </tr>
            </table>
            <table class="derived-stat">
                <tr>
                    <th>{{localize "DoD.ui.character-sheet.profession"}}</th>
                    <td>
                        <a class="sheet-table-data item-edit" data-item-id="{{profession.id}}">{{profession.name}}</a>
                    </td>
                </tr>
            </table>
        </div>


        {{!-- HP, WP & Derived stats --}}
        <div class="flexrow">
            <div class="flexcol">
                {{> "systems/dragonbane/templates/partials/hp-widget.hbs" }}
            </div>
            <div class="flexrow">
                {{> "systems/dragonbane/templates/partials/wp-widget.hbs" }}
            </div>
            <table class="derived-stat">
                <tr>
                    <th>{{localize "DoD.ui.character-sheet.damageBonusSTR"}}</th>
                    <td>{{data.damageBonus.str}}</td>
                </tr>
                <tr>
                    <th>{{localize "DoD.ui.character-sheet.damageBonusAGL"}}</th>
                    <td>{{data.damageBonus.agl}}</td>
                </tr>
                <tr>
                    <th>{{localize "DoD.ui.character-sheet.movement"}}</th>
                    <td>{{data.movement}}</td>
                </tr>
            </table>
        </div>

        {{!-- Trained Skills & Abilities --}}
        <div class="text-box">
            <table>
                <tr>
                    <th><b>{{localize "DoD.ui.character-sheet.trained-skills"}}</b></th>
                    <td class="comma-list">
                        {{#each trainedSkills as |skill skillId|}}
                        <a class="rollable-skill sheet-table-data" data-item-id="{{skill.id}}">{{skill.name}} {{skill.system.value}}</a>
                        {{/each}}
                    </td>
                </tr>
                {{#if spells}}
                <tr>
                    <th><b>{{localize "DoD.ui.character-sheet.spells"}}</b></th>
                    <td class="comma-list">
                        {{#each spells as |spell spellId|}}
                        <a class="rollable-skill sheet-table-data" data-item-id="{{spell.id}}">
                            {{spell.name}} {{spell.system.skillValue}}
                        </a>
                        {{/each}}
                    </td>
                </tr>
                {{/if}}
                <tr>
                    <th><b>{{localize "DoD.ui.character-sheet.abilities"}}</b></th>
                    <td class="comma-list">
                        {{#each abilities as |ability abilityId|}}
                        <a class="sheet-table-data item-edit" data-item-id="{{ability.id}}">{{ability.name}}</a>
                        {{/each}}
                    </td>
                </tr>
            </table>
        </div>
        
        {{!-- Weapons --}}
        <table class="weapon-table">
            <tr class="sheet-table-header">
                <th>&nbsp</th>
                <th>&nbsp</th>
                <th class="text-header">{{localize "DoD.ui.character-sheet.weapons"}}</th>
                <th class="number-header">{{localize "DoD.weapon.skillValue"}}</th>
                <th class="number-header">{{localize "DoD.weapon.grip"}}</th>
                <th class="number-header">{{localize "DoD.weapon.str"}}</th>
                <th class="number-header">{{localize "DoD.weapon.rangeShort"}}</th>
                <th class="number-header">{{localize "DoD.weapon.damageShort"}}</th>
                <th class="number-header">{{localize "DoD.weapon.durabilityShort"}}</th>
                <th></th>
            </tr>
            {{#if equippedWeapons}}
            {{#each equippedWeapons as |weapon weaponId|}}
            <tr class="sheet-table-data item" data-item-id="{{weapon.id}}">
                <td></td>
                <td class="thumbnail-data">
                    <img src="{{weapon.img}}" title="{{weapon.name}}"/>
                </td>
                <td class="text-data"><a class="rollable-skill">{{weapon.name}}</a></td>
                <td class="number-data">{{weapon.system.skill.value}}</td>
                <td class="number-data">{{localize weapon.system.grip.label}}</td>
                <td class="number-data">{{weapon.system.str}}</td>
                <td class="number-data">{{weapon.system.range}}</td>
                <td class="number-data"><a class="rollable-damage">{{weapon.system.damage}}</a></td>
                <td class="number-data">{{weapon.system.durability}}</td>
                <td></td>
            </tr>
            {{/each}}
            {{else}}
            <tr class="sheet-table-data">
                <td></td>
                <td><a>&nbsp</a></td>
                <td></td>
            </tr>
            {{/if}}                  
        </table>


        {{!-- Armor --}}
        <div class="flexrow">
            <table class="armor">
                <tr>
                    <td class="armor-value" rowspan="3">
                        {{#if equippedArmor}}
                        <a>{{equippedArmor.system.rating}}</a>
                        {{/if}}
                    </td>
                    <td class="armor-label">&nbsp</td>
                </tr>
                <tr>
                    <td class="armor-name">
                        {{#if equippedArmor}}
                        <a class="item-edit  sheet-table-data" data-item-id="{{equippedArmor.id}}">{{equippedArmor.name}}</a>
                        {{/if}}
                    </td>
                </tr>
                <tr>
                    <td class="armor-banes">
                        <b>{{localize "DoD.ui.character-sheet.banes"}}:</b> {{equippedArmor.system.banes}}
                    </td>
                </tr>
            </table>
            <table class="armor">
                <tr>
                    <td class="helmet-value" rowspan="3">
                        {{#if equippedHelmet}}
                        <a>{{equippedHelmet.system.rating}}</a>
                        {{/if}}
                    </td>
                    <td class="armor-label">&nbsp</td>
                </tr>
                <tr>
                    <td class="armor-name">
                        {{#if equippedHelmet}}
                        <a class="item-edit sheet-table-data" data-item-id="{{equippedHelmet.id}}">{{equippedHelmet.name}}</a>
                        {{/if}}
                    </td>
                </tr>
                <tr>
                    <td class="armor-banes">
                        <b>{{localize "DoD.ui.character-sheet.banes"}}:</b> {{equippedHelmet.system.banes}}
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>
