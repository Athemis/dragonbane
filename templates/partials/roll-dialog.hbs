<form class = "DoD.dialog">
    <div class="flexrow">

        {{!-- Boons --}}
        <table class="sheet-table boons">
            <tr class="sheet-table-header">
                <th></th>
                <th class="text-header">{{localize "DoD.ui.dialog.boons"}}</th>
            </tr>
            {{#each boons as |boon|}}
            <tr class="sheet-table-data">
                <td><input type="checkbox" name="test"/></td>
                <td class="text-data">{{boon.source}}</td>
            </tr>
            {{/each}}
            {{#times fillerBoons}}
            <tr class="sheet-table-data">
                <td></td>
                <td class="text-data wide">&nbsp</td>
            </tr>
            {{/times}}
            <tr class="sheet-table-data">
                <td class="number-data">
                    <input name="extraBoons" type="number" value="0"/>
                </td>
                <td class="text-data wide">{{localize "DoD.ui.dialog.extra"}}</td>
            </tr>
        </table>

        {{!-- Banes --}}
        <table class="sheet-table banes">
            <tr class="sheet-table-header">
                <th></th>
                <th class="text-header">{{localize "DoD.ui.dialog.banes"}}</th>
            </tr>
            {{#each banes as |bane|}}
            <tr class="sheet-table-data">
                <td><input type="checkbox" name="{{bane.source}}" {{checked bane.value}}/></td>
                <td class="text-data">{{bane.source}}</td>
            </tr>
            {{/each}}
            {{#times fillerBanes}}
            <tr class="sheet-table-data">
                <td></td>
                <td class="text-data wide">&nbsp</td>
            </tr>
            {{/times}}

            <tr class="sheet-table-data">
                <td class="number-data">
                    <input name="extraBanes" type="number" value="0"/>
                </td>
                <td class="text-data wide">{{localize "DoD.ui.dialog.extra"}}</td>
            </tr>
        </table>
        
    </div>


    {{!-- Spells --}}
    {{#if spell}}
    <div>
        <table class="derived-stat">
            <tr>
                <th>{{localize "DoD.ui.dialog.powerLevel"}}</th>
                <td>
                    <select class="power-level" name="powerLevel">
                        {{#select powerLevel}}
                        {{#range 1 3}}
                        <option value="{{@index}}">{{@index}}</option>
                        {{/range}}
                        {{/select}}
                    </select>
                </td>
            </tr>
        </table>
    </div>
    {{/if}}

    {{!-- Weapons --}}
    {{#if actions}}
    <div class="text-box">
        <div class="text-box-title">{{localize "DoD.ui.dialog.chooseAction"}}</div>
        <div class="weapon-action">
            <div class="flexrow">
                {{#each actions as |action|}}
                <div class="flex-nowrap">
                    {{#if action.checked}}
                    <input type="radio" id="{{action.id}}" name="action" value="{{action.id}}" checked>
                    {{else}}
                    <input type="radio" id="{{action.id}}" name="action" value="{{action.id}}">
                    {{/if}}
                    <label for="{{action.id}}" title="{{action.tooltip}}">{{action.label}}</label>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
    <div >
        <table class="simple-table">
            <tr>
                <th>{{localize "DoD.ui.dialog.extraDamage"}}</th>
                <th>{{localize "DoD.ui.dialog.enchantedWeapon"}}</th>
            </tr>
            <tr>
                <td>
                    <input class="extra-damage" name="extraDamage" type="text" value="{{extraDamage}}" pattern="(\d+)?[dD](\d+)([\+\-]\d+)?|(([\+\-])?\d+)?" />
                </td>
                <td>
                    <select class="enchanted-weapon" name="enchantedWeapon">
                        {{#select enchantedWeapon}}
                        <option value="0">-</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        {{/select}}
                    </select>
                </td>
            </tr>
        </table>
    </div>
    <br>
    {{/if}}
</form>
