<div class="tab abilities" data-group="primary" data-tab="abilities">
    <div class="abilities-tab flexrow">
        {{!-- Will Power --}}
        <div>
            {{> "systems/dragonbane/templates/partials/wp-widget.hbs" }}
        </div>

        {{!-- Abilities --}}
        <div>
            {{!-- Kin Abilities --}}
            <table class="sheet-table kin-abilities">
                <tr class="sheet-table-header">
                    <th></th>
                    <th>
                        {{localize "DoD.ui.character-sheet.kinAbilities"}}
                    </th>
                    <th>
                        {{!-- column for icons --}}
                        &nbsp
                    </th>
                </tr>
                {{#each kinAbilities as |ability abilityId|}}
                <tr class="sheet-table-data" data-item-id="{{ability.id}}">
                    <td></td>
                    <td>
                        <a>{{ability.name}}</a>
                    </td>
                    <td>
                        <a class="item-edit" data-type="ability">
                            <i class="fas fa-edit"></i>
                        </a>            
                    </td>
                </tr>
                {{/each}}
            </table>
            {{!-- Profession Abilities --}}
            {{#if professionAbilities }}
            <table class="sheet-table profession-abilities">
                <tr class="sheet-table-header">
                    <th></th>
                    <th>
                        {{localize "DoD.ui.character-sheet.professionAbilities"}}
                    </th>
                    <th>
                        {{!-- column for icons --}}
                        &nbsp
                    </th>
                </tr>
                {{#each professionAbilities as |ability abilityId|}}
                <tr class="sheet-table-data" data-item-id="{{ability.id}}">
                    <td></td>
                    <td>
                        <a>{{ability.name}}</a>
                    </td>
                    <td>
                        <a class="item-edit" data-type="ability">
                            <i class="fas fa-edit"></i>
                        </a>            
                    </td>
                </tr>
                {{/each}}
            </table>
            {{/if}}
            {{!-- Heroic Abilities --}}
            <table class="sheet-table heroic-abilities">
                <tr class="sheet-table-header">
                    <th></th>
                    <th>
                        {{localize "DoD.ui.character-sheet.heroicAbilities"}}
                    </th>
                    <th>
                        {{!-- column for icons --}}
                        &nbsp
                    </th>
                </tr>
                {{#each heroicAbilities as |ability abilityId|}}
                <tr class="sheet-table-data" data-item-id="{{ability.id}}">
                    <td></td>
                    <td>
                        <a class="rollable-skill">{{ability.name}}</a>
                    </td>
                    <td>
                        <a class="item-delete" data-type="ability">
                            <i class="fas fa-trash"></i>
                        </a>    
                        <a class="item-edit" data-type="ability">
                            <i class="fas fa-edit"></i>
                        </a>            
                    </td>
                </tr>
                {{/each}}
            </table>
        </div>
        <div>
        <table class="sheet-table spells">
            <tr class="sheet-table-header">
                <th>&nbsp</th>
                <th>
                    {{localize "DoD.ui.character-sheet.spell"}}
                </th>
                <th class="center">
                    {{localize "DoD.ui.character-sheet.memorized"}}
                </th>
                <th>
                    {{localize "DoD.ui.character-sheet.school"}}
                </th>
                <th>&nbsp</th>
            </tr>
            {{#each spells as |spell spellId|}}
            <tr class="sheet-table-data" data-item-id="{{spell.id}}">
                <td>
                    <a>{{spell.value}}</a>
                </td>
                <td>
                    <a class="rollable-skill">{{spell.name}}</a>
                </td>
                <td class="narrow">
                    <input class="inline-edit" data-field="system.memorized"  type="checkbox" {{checked spell.system.memorized}} />
                </td>
                <td>
                    <a>{{localize spell.system.school}}</a>
                </td>
                <td>
                    <a class="item-delete" data-type="spell">
                        <i class="fas fa-trash"></i>
                    </a>    
                    <a class="item-edit" data-type="spell">
                        <i class="fas fa-edit"></i>
                    </a>            
                </td>
            </tr>
            {{/each}}
        </table>

        </div>
    </div>
</div>
